description "resque scheduler daemon"

start on runlevel [2345]
stop on runlevel [016]

script
  exec sudo -u app /bin/bash -l -c 'cd /srv/www/<%= @app %>/current && exec RAILS_ENV=production bundle exec rake environment resque:scheduler >> log/resque-scheduler_upstart.log 2>&1'
end script

post-start script
  status resque-scheduler | head -n1 | awk '{print $NF}' > /var/run/resque-scheduler.pid
end script

post-stop script
  rm -f /var/run/resque-scheduler.pid
end script
